@{
    ViewBag.Title = "Home Page";
}
@section css {
    <link href="@Url.Content("~/Content/Home/CSS/homepage.min.css")" rel="stylesheet" />
}

    <div id="container">
        <div class="box1">
            <div class='card'>
                <div class='card-img-top'>
                    <img alt='' class='img-fluid' src="@Url.Content("~/Content/Home/Images/usuariolist.png")" />
                </div>
                <div class='card-block'>
                    <h4 class='card-title'>Lista de usuários</h4>
                    <button class='btn btn-primary' id="lista_usuarios">
                        <span class="glyphicon glyphicon-list"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="box2">
            <div class='card'>
                <div class='card-img-top'>
                    <img alt='' class='img-fluid' src="@Url.Content("~/Content/Home/Images/empresalist.png")" />
                </div>
                <div class='card-block'>
                    <h4 class='card-title'>Lista de empresas</h4>
                    <button class='btn btn-primary' id="lista_empresas">
                        <span class="glyphicon glyphicon-list"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="box3">
            <div class='card'>
                <div class='card-img-top'>
                    <img alt='' class='img-fluid' src="@Url.Content("~/Content/Home/Images/usuario.png")" />
                </div>
                <div class='card-block'>
                    <h4 class='card-title'>Cadastro de usuário</h4>
                    <button class='btn btn-primary' id="cadastro_usuario">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="box4">
            <div class='card'>
                <div class='card-img-top'>
                    <img alt='' class='img-fluid' src="@Url.Content("~/Content/Home/Images/empresa.png")" />
                </div>
                <div class='card-block'>
                    <h4 class='card-title'>Cadastro de empresa</h4>
                    <button class='btn btn-primary' id="cadastro_empresa">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                </div>
            </div>
        </div>
        <span class="stretch">
        </span>
</div>
<div id="content-container">

</div>
<script>
    $('#lista_usuarios').click(function () {
        $('#content-container').load('@Url.Action("Index","Usuarios")');
    });
    $('#cadastro_usuario').click(function () {
        $('#content-container').load('@Url.Action("Create","Usuarios")');
    });
        $('#lista_empresas').click(function () {
        $('#content-container').load('@Url.Action("Index","Empresas")');
    });
    $('#cadastro_empresa').click(function () {
        $('#content-container').load('@Url.Action("Create", "Empresas")');
    });
</script>